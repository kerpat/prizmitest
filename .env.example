# GoGoBike Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Gateway
# =============================================================================
# URL of the Prizmatic Gemini OCR service
API_GATEWAY_URL=https://prizmagemini.onrender.com

# =============================================================================
# Telegram Bot
# =============================================================================
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# Security
# =============================================================================
# Internal secret key for OCR worker authentication
INTERNAL_SECRET=your_internal_secret_key_here

# =============================================================================
# Supabase
# =============================================================================
# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# Google Services
# =============================================================================
# Google API key for services (e.g., Maps, Vision API)
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Application URLs (NEW)
# =============================================================================
# Base URL of the main application deployment (Vercel)
# Used for: payment redirects, bot API calls, email links
APP_BASE_URL=https://go-go-b-ike.vercel.app

# URL of the contracts/PDF generation service (Render)
# Used for: generating rental contracts
CONTRACTS_API_URL=https://gogobikedogovor.onrender.com

# Legacy variable (deprecated, use APP_BASE_URL instead)
MAIN_BACKEND_URL=https://go-go-b-ike.vercel.app/

# =============================================================================
# YooKassa Payment Gateway (Backend only)
# =============================================================================
# YooKassa shop ID for payment processing
# YOOKASSA_SHOP_ID=your_shop_id_here

# YooKassa secret key for payment processing
# YOOKASSA_SECRET_KEY=your_secret_key_here
